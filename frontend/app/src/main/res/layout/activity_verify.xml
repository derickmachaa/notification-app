<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyActivity">

    <TextView
        android:id="@+id/tvfname"
        android:layout_width="294dp"
        android:layout_height="111dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="119dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Code:"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvfname" />

    <EditText
        android:id="@+id/edverifycode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/tvfname" />

    <Button
        android:id="@+id/btnverify"
        android:layout_width="132dp"
        android:layout_height="55dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="136dp"
        android:text="Verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edverifycode" />

    <Button
        android:id="@+id/btnregenerate"
        android:layout_width="126dp"
        android:layout_height="56dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="83dp"
        android:text="Request Token"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnverify"
        app:layout_constraintTop_toBottomOf="@+id/edverifycode" />

</androidx.constraintlayout.widget.ConstraintLayout>